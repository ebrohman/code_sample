<div class="page-header">
  <%= link_to teams_path, :class => 'btn' do %>
    <i class="icon-list-alt"></i>
    Back
  <% end %>
  <%= link_to edit_team_path(@team), :class => 'btn btn-primary' do %>
    <i class="icon-pencil icon-white"></i>
    Edit
  <% end %>
  <h1>Listing teams</h1>
</div>

<dl>
  <dt>Name:</dt>
  <dd><%= @team.name %></dd>

  <dt>Logo:</dt>
  <dd><%= @team.logo %></dd>

  <dt>Website:</dt>
  <dd><%= @team.website %></dd>

  <dt>Home stadium:</dt>
  <dd><%= @team.home_stadium %></dd>

  <dt>Stadium capacity:</dt>
  <dd><%= @team.stadium_capacity %></dd>

  <dt>Founding year:</dt>
  <dd><%= @team.founding_year %></dd>

  <dt>Uuid:</dt>
  <dd><%= @team.uuid %></dd>

</dl>
